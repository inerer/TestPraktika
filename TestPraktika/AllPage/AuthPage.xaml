<Page x:Class="TestPraktika.AllPage.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestPraktika.AllPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel Margin="10">
            <Label Content="Логин" Width="44"/>
            <TextBox x:Name="tbLogin" Width="228" Height="26"/>
            <Label Content="Пароль" Width="50"/>
            <PasswordBox x:Name="tbPassword" Width="230" Height="26"/>
            <Button Style="{StaticResource MainButton}" x:Name="DriverButton" Click="AgentButton_Click">Авторизация</Button>
        </StackPanel>
    </Grid>
</Page>
