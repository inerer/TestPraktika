<Page x:Class="TestPraktika.AllPage.EditAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestPraktika.AllPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditAddPage">

    <Grid Loaded="Grid_Loaded">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    
                    <TextBlock Style="{StaticResource MainTextBlock}">Продукт</TextBlock>
                    

                </StackPanel>
                <StackPanel Orientation="Vertical">
                    
                    <TextBox Text="{Binding name}" Style="{StaticResource MainTextBox}" x:Name="LastNameTextBox"/>
                    

                </StackPanel>
            </StackPanel>
            <Button Click="OkButton_Click" x:Name="OkButton" Style="{StaticResource InterfaceButton}">Ок</Button>
        </StackPanel>
    </Grid>
</Page>
